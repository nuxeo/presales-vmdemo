{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "ami_regions": ["us-west-1","us-west-2","eu-west-1","ap-northeast-1"],
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "nuxeo-presales-ubuntu-20-4-{{timestamp}}",
      "tags": {
        "Name": "nuxeo-presales-ubuntu-20-4",
        "billing-category":"presales",
        "billing-subcategory": "generic"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command" : "echo 'packer' | sudo -S env {{ .Vars }} {{ .Path }}",
      "script": "./setup.sh"
    }
  ]
}
